<Window x:Class="lenticulis_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lenticulis" Height="750" Width="1200">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Menu>
                <MenuItem Header="_Soubor">
                    <MenuItem Header="_Otevřít"/>
                    <MenuItem Header="_Uložit"/>
                    <Separator/>
                    <MenuItem Header="_Zavřít"/>
                </MenuItem>
                <MenuItem Header="_Úpravy">
                </MenuItem>
                <MenuItem Header="_O projektu">
                </MenuItem>
            </Menu>
        </DockPanel>

        <Border DockPanel.Dock="Bottom" BorderThickness="1" BorderBrush="Gray">
            <DockPanel LastChildFill="True" Height="180">
                <ToolBarTray DockPanel.Dock="Left" Orientation="Vertical">
                    <ToolBar>
                        <Button ToolTip="Přidat vrstvu">
                            <Image Source="/lenticulis-gui;component/res/icon/Add.ico" Margin="0,0,0,10"/>
                        </Button>
                        <Button ToolTip="Odstranit vrstvu">
                            <Image Source="/lenticulis-gui;component/res/icon/Remove.ico" Margin="0,0,0,10"/>
                        </Button>
                    </ToolBar>
                </ToolBarTray>
                <StackPanel>

                </StackPanel>
            </DockPanel>
        </Border>

        <DockPanel LastChildFill="True">
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button ToolTip="Nový">
                        <Image Source="/lenticulis-gui;component/res/icon/New.ico" />
                    </Button>
                    <Button ToolTip="Uložit">
                        <Image Source="/lenticulis-gui;component/res/icon/Save.ico" />
                    </Button>
                    <Button ToolTip="Otevřít">
                        <Image Source="/lenticulis-gui;component/res/icon/Folder.ico" />
                    </Button>
                    <Separator />
                    <Button ToolTip="Zpět">
                        <Image Source="/lenticulis-gui;component/res/icon/Undo.ico" />
                    </Button>
                    <Button ToolTip="Vpřed">
                        <Image Source="/lenticulis-gui;component/res/icon/Redo.ico" />
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <ToolBarTray DockPanel.Dock="Left" Orientation="Vertical">
                <ToolBar>
                    <Button ToolTip="Přesunout vrstvu" >
                        <Image Source="/lenticulis-gui;component/res/icon/Move.ico" Margin="0,0,0,10"/>
                    </Button>
                    <Button ToolTip="Změnit velikost vrstvy">
                        <Image Source="/lenticulis-gui;component/res/icon/Resize.ico" Margin="0,0,0,10"/>
                    </Button>
                    <Button ToolTip="Rotovat vrstvu" >
                        <Image Source="/lenticulis-gui;component/res/icon/Refresh.ico" Margin="0,0,0,10"/>
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <Border DockPanel.Dock="Right" BorderThickness="1" BorderBrush="Gray">
                <Grid Width="250">
                    <TextBox Name="AddressBlock" Height="45" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Auto" IsReadOnly="True"/>

                    <ListBox IsSynchronizedWithCurrentItem="true" Margin="0,45,0,0" Name="BrowserList">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="BrowserItem">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Ico}" Margin="0,0,5,0" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <EventSetter Event="MouseDoubleClick" Handler="Browser_DoubleClick"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <Border BorderThickness="1" BorderBrush="Gray">
                <Canvas>

                </Canvas>
            </Border>
        </DockPanel>
    </DockPanel>
</Window>
